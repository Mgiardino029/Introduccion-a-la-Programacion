    procedure EliminarEnemigosPorDestrucciónDelDiario() {
        /*
        prop: elimina todos los dementores y mortifagos de las habitaciones de gobwarts
        prec: ninguna
        obs: es un recorrido de transformacion entre habitaciones de gobwars eliminando dementores y mortifagos
        */


        IrAPrimeraHabitacion()
        while(haySiguienteHabitacion) {
            EliminarEnemigos()
        }
        EliminarEnemigos()


    }


    procedure EliminarEnemigos() {
        /*
        prop: elimina los enemigos de la habitacion actual
        precon: ninguna
        */

        if(hayPersonajeCategoria_(categoriaMortifago()) || hayPersonaje(categoriaDementor())) {
            EliminarPersonaje()
        }
    }


    // 4)

    function categoriaDePersonajeConMayorPoderMágico() {
        /*
        prop: describe la categoria del personaje que posee el mayor poder magico en todo gobwarts
        prec: hay 1 personaje mas poderoso que los demas
        tipo: numero
        obs: es un recorrido de maximo y minimo entre categorias de gobwarts buscando la categoria que contenga
        el personaje con mayor poder magico
        */
        
        categoriaActual:= minCategoria()
        categoriaMasPoderosaHastaAhora:= categoriaActual() 
        while(categoriaActual/= maxCategoria()) {
            categoriaActual:= siguiente(categoriaActual)
            categoriaMasPoderosaHastaAhora:= categoriaMasPoderosaEntre_Y_(categoriaMasPoderosaHastaAhora, categoriaActual)
        }
        return(categoriaMasPoderosaHastaAhora)



    }

    function categoriaMasPoderosaEntre_Y_(primeraCategoria,segundaCategoria) {
        /*
        prop: describe la categoria mas poderosa entrea "primeraCategoria" y "segundaCategoria"
        prec: una categoria es mas poderosa que la otra
        tipo: numero
        parm:
        primeraCategoria: Numero- numero que describe la primeraCategoria a evaluar
        segundaCategoria: Numero- numero que describe la segundacategoria a evaluar
        */

        return(choose primeraCategoria when personajeMasPoderosoDeCategoria_(primeraCategoria) > personajeMasPoderosoDeCategoria__(segundaCategoria)
            segundaCategoria otherwise)


    }

    function personajeMasPoderosoDeCategoria_(categoria) {
        /*
        prop: describe el personaje mas poderoso de la categoria "categoria"
        prec: debe haber 1 persona mas poderoso que los demas
        tipo: 
        obs: es un recorrido de maximo minimo entre personajes de una categoria
        para encontrar el personaje que tenga mayor poder magico
        */

        IrAPrimeraHabitacion()
        elPersonajeMasPoderosoHastaAhora:=poderMagicoDePersonajeCategoria_SiHay()
        while(haySiguienteHabitacion) {
            IrASiguienteHabitacion()
            elPersonajeMasPoderosoHastaAhora:=personajeMasPoderosoEntre_Y_(elPersonajeMasPoderosoHastaAhora,
             poderMagicoDePersonajeCategoria_SiHay())

        }
        return(elPersonajeMasPoderosoHastaAhora)
        }
    }